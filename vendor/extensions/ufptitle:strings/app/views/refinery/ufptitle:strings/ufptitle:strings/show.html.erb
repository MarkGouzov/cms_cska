<% content_for :body_content_title do %>
  <%= @ufptitle:string.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @ufptitle:string.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @ufptitle:string.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @ufptitle:string.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ufptitle:strings">
      <% @ufptitle:strings.each do |ufptitle:string| %>
        <li>
          <%= link_to ufptitle:string.title, refinery.ufptitle:strings_ufptitle:string_path(ufptitle:string) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
