<% content_for :body_content_title do %>
  <%= @ufp.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @ufp.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @ufp.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @ufp.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @ufp.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ufps">
      <% @ufps.each do |ufp| %>
        <li>
          <%= link_to ufp.title, refinery.ufps_ufp_path(ufp) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
