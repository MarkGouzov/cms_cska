<ul>
  <% if ::Refinery::Ufps::Admin::UfpsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.ufps_admin_ufps_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_ufps_admin_ufp_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Ufps::Admin::UfpsController.sortable? && ::Refinery::Ufps::Ufp.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Ufps"),
                 refinery.ufps_admin_ufps_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Ufps"),
                 refinery.ufps_admin_ufps_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
